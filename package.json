{
	"name": "jsonpath-js",
	"version": "0.2.0",
	"description": "An implementation of JSONPath",
	"author": "ashphy <ne.vivam.si.abis@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ashphy/jsonpath-js.git"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.js",
			"import": "./dist/index.mjs"
		}
	},
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"engines": {
		"node": ">=18"
	},
	"files": [
		"dist",
		"package.json",
		"README.md",
		"LICENSE"
	],
	"keywords": [
		"jsonpath",
		"json"
	],
	"scripts": {
		"build": "tsup",
		"build:parser": "peggy --extra-options-file src/grammar/config.js",
		"lint": "biome check",
		"test": "vitest"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/jest": "^29.5.8",
		"@types/node": "^18.7.3",
		"lefthook": "^1.11.14",
		"npm-run-all": "^4.1.5",
		"peggy": "^5.0.4",
		"tsup": "^8.3.5",
		"tsx": "^4.19.2",
		"typescript": "^5.5.3",
		"vitest": "^3.2.3"
	}
}
